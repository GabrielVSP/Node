<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
</head>
<body>

    <%- include('./partials/header.ejs') %>

    <% const name = 'Walluigi' %>

    <h1>Hello, world!</h1>
    <p><%= name %>.js</p>

    <% if(blogs.length > 0) {%>

       <% blogs.forEach((blog) => { %>
        <div>
            <h3><%= blog.title %></h3>
            <p><%= blog.snippet %></p>
        </div>
       <% }) %>

    <% } else { %>
        <h3>No blogs</h3>
    <% }%>
</body>
</html>